{
  "extends": "./tsconfig.settings",
  "include": ["*.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "./src/**/__fixtures__",
    "./src/**/__mocks__",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "node_modules",
    "dist",
    "tests"
  ],
  "compilerOptions": {
    "baseUrl": ".", // Ensure baseUrl is set
    "paths": {
      "@/*": ["src/*"],
      "*": ["node_modules/*"]
    }
  }
}
